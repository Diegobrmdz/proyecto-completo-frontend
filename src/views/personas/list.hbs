<div class="container">
    <div class="row mt-5">
        <h3 class="text-center text-uppercase p-2"> Lista de Personas</h3>

        {{#if personas}}

            <table class="table text-center">
                <thead>
                    <tr class="table-dark">
                        <th scope="col" class="col-4"> Nombre     </th>
                        <th scope="col"> Apellido   </th>
                        <th scope="col"> Edad       </th>
                        <th scope="col"> Acciones   </th>
                    </tr>
                </thead>
                <tbody>
                    
                    {{#each personas}}
                        <tr>
                            <td> {{name}} </td>
                            <td> {{lastname}} </td>
                            <td> {{age}} </td>
                            <td> 
                                <div class="btn-group">
                                    <a href="/edit/{{id}}" class="btn btn-warning p-2">
                                        <i class="fa-solid fa-pencil"></i>
                                    </a>
                                    <a href="/delete/{{id}}" class="btn btn-danger p-2">
                                        <i class="fa-solid fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {{/each}}

                </tbody>
            </table>

        {{else}}

            <div class="card text-center mx-auto">
                <div class="card-header">
                <h3 class="text-uppercase"> Crear Nueva Persona</h3>
            </div>
            <div class="card-body">
                <form action="/add" method="post">
                    <div class="input-group mt-2">
                            <label for="name" class="input-group-text"> Nombre Persona </label>
                            <input class="form-control" type="text" name="name" id="name" placeholder="Ejemplo: Cristhian Galvis" autofocus required >
                    </div>

                    <div class="input-group mt-2">
                            <label for="name" class="input-group-text"> Apellido Persona </label>
                            <input class="form-control" type="text" name="lastname" id="lastname" placeholder="Ejemplo: Cristhian Galvis" autofocus required >
                    </div>

                    <div class="input-group mt-2">
                            <label for="name" class="input-group-text"> Edad </label>
                            <input class="form-control" type="number" name="age" id="age" placeholder="Ejemplo: Cristhian Galvis" autofocus required >
                    </div>

                    <div class="form-group mt-4 d-grid gap-2">
                            <button class="btn btn-success"> Crear </button>
                    </div>
                        
                    
            </div>
                </form>

            </div>

        </div>

    </div>
</div>